<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="110dp"
              android:orientation="vertical"
              android:gravity="center"
              android:paddingLeft="10dp"
              android:paddingRight="10dp"
              android:background="@drawable/item_giftmarket_bg_selector"  >

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_gift_current_count"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_gravity="right"
            android:text="1"
            android:gravity="center"
            android:textSize="@dimen/h1"
            android:textColor="@color/white"
            android:background="@drawable/shape_red_point"/>

        <ImageView
            android:id="@+id/item_gift_icon"
            android:layout_width="80dp"
            android:layout_height="80dp"/>
    </FrameLayout>

    <TextView
        android:id="@+id/tv_item_gift_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_marginTop="-10dp"
        android:textSize="@dimen/h3"
        android:text="棒棒糖"
        android:singleLine="true"
        />
    <TextView
        android:id="@+id/tv_item_gift_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/live_gift_cost_gold"
        android:textSize="@dimen/h1"
        android:text="100币"
        android:singleLine="true"
        />
    <ProgressBar
        android:id="@+id/pb_item_gift"
        android:paddingLeft="1dp"
        android:paddingRight="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:progress="50"
        android:paddingBottom="5dp"
        style="@style/live_item_progress_bar_style"/>
</LinearLayout>