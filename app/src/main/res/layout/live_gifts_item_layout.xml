<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:id="@+id/gift_show_item">

    <LinearLayout
        android:id="@+id/live_gift_msg"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_marginRight="-40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/live_gift_item_bg_shape"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="40dp"
        android:paddingRight="25dp">

        <TextView
            android:id="@+id/live_gift_userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="航空母舰航空母"
            android:textColor="@android:color/white"
            android:singleLine="true"
            android:textSize="10sp"/>

        <TextView
            android:layout_marginTop="2dp"
            android:id="@+id/live_gift_usermsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="送出了100币"
            android:textColor="@android:color/white"
            android:singleLine="true"
            android:textSize="10sp"/>
    </LinearLayout>


    <ImageView
        android:id="@+id/live_gift_user_icon"
        android:layout_marginLeft="1dp"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginTop="11dp"/>

    <ImageView
        android:id="@+id/live_gift_img"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_toRightOf="@+id/live_gift_msg"/>

    <TextView
        android:id="@+id/live_gift_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/live_gift_img"
        android:padding="2dp"
        android:text="x20"
        android:visibility="invisible"
        android:textColor="@color/live_gift_red"
        android:textSize="35sp"
        android:textStyle="bold"/>

</RelativeLayout>